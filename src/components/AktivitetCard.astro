---
import Heading from "./Heading.astro";
import Text from "./Text.astro";
export interface Props {
  image?: string;
  name?: string;
  description?: string;
}
const { image = undefined, name = "", description = "" } = Astro.props as Props;
---

<div class="flex flex-col items-center snap-center flex-shrink-0 w-64 md:w-80">
  <div
    class="w-64 md:w-80 h-64 md:h-[420px] overflow-hidden"
    style="margin-bottom: var(--spacing-xs);"
  >
    {image && <img src={image} alt={name} class="w-full h-full object-cover" />}
  </div>

  <div class="w-full text-center" style="margin-bottom: var(--spacing-3xs);">
    <Heading htmlheading="h4" size="xsmall" class="text-text-dark">
      {name}
    </Heading>
  </div>

  <div class="w-full">
    <Text class="text-text-dark text-center line-clamp-4">
      {description}
    </Text>
  </div>
</div>
