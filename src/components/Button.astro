---
import Text from "./Text.astro";

const { variant = "dark" } = Astro.props;

const variantClasses = {
  dark: "border-button-dark text-text-dark hover:bg-button-dark hover:border-button-dark hover:text-text-light",
  light:
    "border-button-light text-text-light hover:bg-button-light hover:border-button-light hover:text-text-dark",
};
---

<div>
  <button
    class:list={[
      "inline-flex items-center gap-3xs border-2 px-xs py-3xs transition-all duration-300",
      variantClasses[variant],
    ]}
  >
    <Text teksttype="knaptekst" stylingclasses="m-0 leading-none">
      <slot />
    </Text>
    <svg
      class="h-6 w-6 sm:h-7 sm:w-7 md:h-8 md:w-8 stroke-current shrink-0 self-center"
      viewBox="0 0 10 10"
      fill="none"
      aria-hidden="true"
    >
      <path
        d="M2 8L8 2M4 2h4v4"
        stroke-width="1"
        stroke-linecap="butt"
        stroke-linejoin="miter"></path>
    </svg>
  </button>
</div>
