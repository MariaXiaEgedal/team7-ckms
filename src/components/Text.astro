---
import { b } from "motion/react-client";

// Henter parametrene fra Astro.props
const { teksttype = "brødtekst", stylingclasses = "" } = Astro.props;

//Definer den styling (Tailwind classes), der gør sig gældende for de forskellige størrelser.
const sizeClasses = {
  brødtekst: "text-[18px] md:text-[22px] font-light font-onsite",
  brødtekstbold: "text-[18px] md:text-[25px] font-bold font-onsite",
  knaptekst: "text-[16px] md:text-[20px] font-bold font-onsite-extended",
  billedtekst: "text-[12px] md:text-[15px] font-onsite-extended",
};
---

<p class:list={[sizeClasses[teksttype], stylingclasses]}><slot /></p>
