---
import MainLayout from "../layouts/MainLayout.astro";
import Button from "../components/Button.astro";
import Link from "../components/Link.astro";
import { Image } from "astro:assets";
import thumbsup from "../assets/images/thumbsup.png";
import Heading from "../components/Heading.astro";
import Text from "../components/Text.astro";
import Formular from "../components/Formular.astro";
---

<MainLayout title="Hjælp til">
  <div class="flex flex-col gap-m md:gap-xl my-m md:my-xl">
    <!-- ***************************** Start Støt vores formål og arbejde ***************************** -->
    <section class="mx-2xs md:mx-l">
      <!-- Tekst (venstre) -->
      <Heading
        htmlheading="h1"
        size="large"
        stylingclasses="text-text-dark mb-xs"
      >
        Støt vores formål og arbejde
      </Heading>

      <div class="lg:grid lg:grid-cols-12 md:gap-x-2xs">
        <div class="md:col-span-6 lg:self-center">
          <Text teksttype="brødtekst" stylingclasses="text-text-dark mb-xs">
            Meld dig ind i Foreningen Kunst og Mental Sundhed og vær med til at
            støtte centrets formål og arbejdet med at bidrage til større
            livskvalitet for mennesker med erfaring fra psykiatrien.
          </Text>

          <Text teksttype="brødtekst" stylingclasses="text-text-dark mb-xs  ">
            Du bliver del af et fællesskab som ønsker at reducere fordomme og
            stigmatisering af mental sygdom - og frem.
          </Text>
        </div>

        <div class="md:col-start-7 md:col-span-6 flex justify-center">
          <Formular />
        </div>
      </div>
    </section>
    <!-- ***************************** End Støt vores formål og arbejde ***************************** -->

    <!-- ***************************** Start Vidensindsamling ***************************** -->
    <section class="mb-m mx-2xs md:mb-xl md:mx-l">
      <div class="md:grid md:grid-cols-12 md:gap-2xs">
        <!-- Tekstkolonne (mobil: først, desktop: højre side) -->
        <div class="md:col-span-7 md:col-start-6 md:order-2">
          <Heading
            htmlheading="h2"
            size="medium"
            stylingclasses="text-text-dark mb-xs md:mb-m "
          >
            Vidensindsamling
          </Heading>

          <Text
            teksttype="brødtekst"
            stylingclasses="text-text-dark mb-3xs md:mb-xs"
          >
            Vi undersøger, hvordan kunst kan styrke mental sundhed i Danmark og
            Norden - og hvordan viden, erfaringer og indsatser bedst kan deles
            på tværs af sektorer.
          </Text>

          <Text teksttype="brødtekst" stylingclasses="text-text-dark">
            Formålet:
          </Text>

          <Text teksttype="brødtekst" stylingclasses="text-text-dark">
            <ul class="list-disc mb-3xs md:mb-xs">
              <li>
                <Text stylingclasses="text-text-dark"
                  >At skabe et samlet overblik over feltet</Text
                >
              </li>

              <li>
                <Text stylingclasses="text-text-dark"
                  >At identificere muligheder og barrierer</Text
                >
              </li>

              <li>
                <Text stylingclasses="text-text-dark"
                  >At give anbefalinger til politikere og fagfolk</Text
                >
              </li>

              <li>
                <Text stylingclasses="text-text-dark"
                  >At pege på nye veje og best practice.</Text
                >
              </li>
            </ul>
          </Text>

          <Text
            teksttype="brødtekst"
            stylingclasses="text-text-dark mb-xs md:mb-m"
          >
            Projektet bygger på analyser af eksisterende initiativer, forskning,
            metoder og praksisser - inspireret af internationale modeller som
            Creative Health-rapporten.
          </Text>
        </div>

        <!-- Billedkolonne (mobil: under teksten, desktop: venstre side) -->
        <div class="md:col-span-5 md:col-start-1 md:order-1">
          <img
            src="/img/Videnindsamling.webp"
            alt="Videnindsamling"
            class="w-full h-auto object-cover rounded-tl-s md:rounded-tl-l"
          />
        </div>
      </div>
    </section>
    <!-- ***************************** End Vidensindsamling ***************************** -->

    <!-- ***************************** Start Samarbejder & Partnerskaber ***************************** -->
    <section class="px-2xs md:px-l py-xs md:py-m md:mb-l mb:xs">
      <div class="lg:grid lg:grid-cols-12 lg:gap-x-2xs">
        <!-- Venstre: Overskrift -->
        <div class="lg:col-start-1 lg:col-span-6">
          <Heading
            htmlheading="h2"
            size="medium"
            stylingclasses="text-text-dark"
          >
            Samarbejder og Partnerskaber
          </Heading>
        </div>

        <!-- Højre: Brødtekst -->
        <div class="lg:col-start-7 lg:col-span-6 lg:self-center">
          <Text teksttype="brødtekst" stylingclasses="text-text-dark mb-xs">
            Nationalt Center for Kunst og Mental Sundhed indgår i en række
            lokale, regionale og nationale både formelle og uformelle netværk.
          </Text>

          <Text teksttype="brødtekstbold" stylingclasses="text-text-dark">
            Vil du indgå i et partnerskab?
          </Text>

          <Text
            teksttype="brødtekst"
            stylingclasses="text-text-dark mb-xs md:mb-l"
          >
            Kontakt sekretariatschef Anéh Hajdu på 2122 2692.
          </Text>
        </div>
      </div>
    </section>

    <!-- ***************************** End Samarbejder & Partnerskaber ***************************** -->

    <!-- ***************************** Start Samarbejder & Partnerskaber scroll ***************************** -->

    <section class="mb-m md:mb-l">
      <div class="overflow-hidden">
        <div
          class="logo-track flex items-center gap-m md:gap-l whitespace-nowrap"
        >
          <!-- 1. sæt -->
          <img
            src="/img/smkikon.svg"
            alt="SMK"
            class="h-20 md:h-35 w-auto min-w-[200px] md:min-w-[260px]"
          />

          <img
            src="/img/kuikon.svg"
            alt="Københavns Universitet"
            class="h-20 md:h-35 w-auto min-w-[200px] md:min-w-[260px]"
          />

          <img
            src="/img/sindikon.svg"
            alt="SIND"
            class="h-20 md:h-35 w-auto min-w-[200px] md:min-w-[260px]"
          />

          <img
            src="/img/tatikon.svg"
            alt="TAT"
            class="h-20 md:h-35 w-auto min-w-[200px] md:min-w-[260px]"
          />

          <img
            src="/img/haabikon.svg"
            alt="Psykiatrien"
            class="h-20 md:h-35 w-auto min-w-[200px] md:min-w-[260px]"
          />

          <!-- 2. sæt (loop) -->
          <img
            src="/img/smkikon.svg"
            alt=""
            aria-hidden="true"
            class="h-20 md:h-35 w-auto min-w-[200px] md:min-w-[260px]"
          />

          <img
            src="/img/kuikon.svg"
            alt=""
            aria-hidden="true"
            class="h-20 md:h-35 w-auto min-w-[200px] md:min-w-[260px]"
          />

          <img
            src="/img/sindikon.svg"
            alt=""
            aria-hidden="true"
            class="h-20 md:h-35 w-auto min-w-[200px] md:min-w-[260px]"
          />

          <img
            src="/img/tatikon.svg"
            alt=""
            aria-hidden="true"
            class="h-20 md:h-35 w-auto min-w-[200px] md:min-w-[260px]"
          />

          <img
            src="/img/haabikon.svg"
            alt=""
            aria-hidden="true"
            class="h-20 md:h-35 w-auto min-w-[200px] md:min-w-[260px]"
          />
        </div>
      </div>

      <style>
        .logo-track {
          animation: logo-scroll 12s linear infinite;
          will-change: transform;
        }

        @keyframes logo-scroll {
          from {
            transform: translateX(0);
          }
          to {
            transform: translateX(-50%);
          }
        }
      </style>
    </section>
    <!-- ***************************** End Samarbejder & Partnerskaber scroll ***************************** -->

    <!-- ***************************** Start Bidragsydere text ***************************** -->

    <section class="px-2xs md:px-l py-xs md:py-m mb-xs md:mb-m text-center">
      <Heading
        htmlheading="h2"
        size="medium"
        stylingclasses="text-text-dark mb-xs md:mb-m"
      >
        Bidragsydere
      </Heading>

      <Text teksttype="brødtekst" stylingclasses="text-text-dark  ">
        Nationalt Center for Kunst og Mental Sundhed er støttet af:
      </Text>
    </section>

    <!-- ***************************** End Bidragsydere text ***************************** -->

    <!-- ***************************** Start Bidragsydere ***************************** -->
    <section class="bg-background-v5 py-m px-2xs md:px-l">
      <div class="grid grid-cols-3 gap-m md:gap-l place-items-center">
        <!-- Statens Kunstfond -->
        <img
          src="/img/sklogo.svg"
          alt="Statens Kunstfond"
          class="max-h-10 md:max-h-16 object-contain"
        />

        <!-- Hoffmann & Husmans Fond -->
        <img
          src="/img/hhlogo.svg"
          alt="Hoffmann & Husmans Fond"
          class="max-h-10 md:max-h-16 object-contain"
        />

        <!-- Det Obelske Familiefond -->
        <img
          src="/img/doflogo.svg"
          alt="Det Obelske Familiefond"
          class="max-h-10 md:max-h-16 object-contain"
        />

        <!-- Finansministeriet -->
        <img
          src="/img/fmlogo.svg"
          alt="Finansministeriet"
          class="max-h-10 md:max-h-16 object-contain"
        />

        <!-- Augustinus Fonden -->
        <img
          src="/img/aflogo.svg"
          alt="Augustinus Fonden"
          class="max-h-10 md:max-h-16 object-contain"
        />

        <!-- Roskilde Festival Fonden -->
        <img
          src="/img/rflogo.svg"
          alt="Roskilde Festival Fonden"
          class="max-h-10 md:max-h-16 object-contain"
        />
      </div>
    </section>

    <!-- ***************************** End Bidragsydere ***************************** -->
  </div>
</MainLayout>
